<!-- start catalog/home/banner-top-left.hbs -->
<div class="aspect-ratio aspect-ratio--4to3">
  <picture>
    <source srcset="{{cms "banner:homeTopLeft.imageLarge"}}" media="(min-width: 1200px)">
    <source srcset="{{cms "banner:homeTopLeft.imageMedium"}}" media="(min-width: 768px)">
    <img src="{{cms "banner:homeTopLeft.imageSmall"}}" class="img-responsive">
  </picture>
</div>

<div class="banner-text">
  <h4 class="banner-title">{{{cms "banner:homeTopLeft.title"}}}</h4>
  <p class="banner-paragraph">{{{cms "banner:homeTopLeft.subtitle"}}}</p>
  <a href="{{cms "banner:homeTopLeft.linkHref"}}" class="btn banner-btn">
    {{cms "banner:homeTopLeft.linkText"}}
  </a>
</div>
<!-- end catalog/home/banner-top-left.hbs -->
