<!-- start catalog/home/banner-top-right.hbs -->
<div class="aspect-ratio aspect-ratio--4to3">
  <picture>
    <source srcset="{{cms "banner:homeTopRight.imageLarge"}}" media="(min-width: 1200px)">
    <source srcset="{{cms "banner:homeTopRight.imageMedium"}}" media="(min-width: 768px)">
    <img src="{{cms "banner:homeTopRight.imageSmall"}}" class="img-responsive">
  </picture>
</div>

<div class="banner-text">
  <h4 class="banner-title">{{{cms "banner:homeTopRight.title"}}}</h4>
  <p class="banner-paragraph">{{{cms "banner:homeTopRight.subtitle"}}}</p>
  <a href="{{cms "banner:homeTopRight.linkHref"}}" class="btn banner-btn">
    {{cms "banner:homeTopRight.linkText"}}
  </a>
</div>
<!-- end catalog/home/banner-top-right.hbs -->
